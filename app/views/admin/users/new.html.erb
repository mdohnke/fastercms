<h2>Neuer Nutzer</h2>
<%= form_for @user, :as => :user, :url => { :action => "create" } do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :group %><br />
    <%= f.collection_select(:group_id, Group.all, :id, :name, :prompt => true) %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>